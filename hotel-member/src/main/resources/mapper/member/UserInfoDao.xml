<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sustech.hotel.member.dao.UserInfoDao">

    <resultMap type="sustech.hotel.member.entity.UserInfoEntity" id="userInfoMap">
        <result property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="telephone" column="telephone"/>
        <result property="email" column="email"/>
        <result property="avatar" column="avatar"/>
        <result property="gender" column="gender"/>
        <result property="birthday" column="birthday"/>
        <result property="province" column="province"/>
        <result property="city" column="city"/>
        <result property="detailAddress" column="detail_address"/>
        <result property="job" column="job"/>
        <result property="isBlocked" column="is_blocked"/>
        <result property="socialName" column="social_name"/>
        <result property="accessToken" column="access_token"/>
        <result property="growth" column="growth"/>
        <result property="createTime" column="create_time"/>
        <result property="balance" column="balance"/>
        <result property="vipLevel" column="vip_level"/>
        <result property="identityCard" column="identity_card"/>
        <result property="consumeAmount" column="consume_amount"/>
        <result property="couponAmount" column="coupon_amount"/>
        <result property="orderCount" column="order_count"/>
        <result property="commentCount" column="comment_count"/>
        <result property="loginCount" column="login_count"/>
    </resultMap>

    <update id="updateInfo">
        UPDATE chm_user_info
        SET phone = #{phone}, email = #{email}, avatar = #{avatar}, gender = #{gender}, birthday = #{birthday}, province = #{province}, city = #{city}, detail_address = #{detailAddress}, job = #{job}, is_blocked = #{isBlocked}, social_name = #{socialName}
        WHERE user_id  = #{toEditId}
    </update>

    <insert id="register">
        INSERT INTO chm_user_info (username, password, phone, email, gender, province, city, social_name, birthday, balance, detail_address)
        VALUES (#{name}, #{password}, #{phone}, #{email}, #{gender}, #{province}, #{city}, #{social_name}, #{birthday}, 0, #{detailedAdr});
    </insert>

    <update id="test">
        UPDATE chm_user_info
        SET username = #{name}
        WHERE user_id  = #{toEditId}
    </update>
</mapper>